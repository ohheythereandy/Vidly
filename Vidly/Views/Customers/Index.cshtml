@model  IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

<table class="table table-bordered table-hover">
    <tr>
        <td>Customer</td>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.ID }, null)</td>
        </tr>
    }
</table>